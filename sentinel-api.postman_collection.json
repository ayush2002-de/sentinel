{
  "info": {
    "name": "Sentinel Support API",
    "description": "Complete API collection for fraud triage system with all acceptance test scenarios",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "sentinel-dev-key",
        "type": "string"
      },
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "runId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        },
        {
          "name": "Prometheus Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Alerts",
      "item": [
        {
          "name": "Get All Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/alerts?limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "status",
                  "value": "NEW",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Alerts - NEW Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/alerts?status=NEW&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts"],
              "query": [
                {
                  "key": "status",
                  "value": "NEW"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Customers & Transactions",
      "item": [
        {
          "name": "Get Customer Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/customer/cust_001/transactions?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer", "cust_001", "transactions"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "cursor",
                  "value": "",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Customer Transactions - With Cursor",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/customer/cust_001/transactions?cursor={{nextCursor}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer", "cust_001", "transactions"],
              "query": [
                {
                  "key": "cursor",
                  "value": "{{nextCursor}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Triage",
      "item": [
        {
          "name": "Start Triage",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 202) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('runId', jsonData.runId);",
                  "    console.log('Saved runId:', jsonData.runId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"alertId\": \"alert_acceptance_02_dispute\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/triage",
              "host": ["{{baseUrl}}"],
              "path": ["api", "triage"]
            }
          }
        },
        {
          "name": "Stream Triage Results (SSE)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "text/event-stream"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/triage/{{runId}}/stream",
              "host": ["{{baseUrl}}"],
              "path": ["api", "triage", "{{runId}}", "stream"]
            }
          }
        }
      ]
    },
