{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": []
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}
